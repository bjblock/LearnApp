<h1>Deck No. <%= @deck.id %>: <%= @deck.name %></h1>

<br>

<div id="countdown">You were too slow!</div>
<p id="notice"><%= notice %></p>
<br>

<p>
  <b>Question:</b>
  <%= @question.content %>
</p>

<br>

<p>
  <b>Choose an answer:</b>
	<ol>
		<% @quiz.shuffle.each do |q| %>
		<li data-question-id="<%= @question.id %>" data-answer-id="<%= q.id %>" class="choice"><%=  link_to q.content, "check/#{@question.id}/#{q.id}" %></li>
		<% end %> 	
	</ol>
</p>

<%= link_to 'Back to Home', root_path %>
